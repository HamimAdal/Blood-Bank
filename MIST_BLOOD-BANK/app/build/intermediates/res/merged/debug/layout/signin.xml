<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#e8e8e7"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="#eb2b39"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">



            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Page"
                android:textColor="#ffffff"
                android:layout_marginLeft="125dp"
                android:textSize="25sp"
                android:textStyle="bold"

                android:layout_gravity="center_horizontal|center_vertical"/>



        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="574dp"
            android:layout_marginLeft="00dp"
            android:layout_marginTop="00dp"
            android:layout_marginRight="00dp"
            android:layout_marginBottom="00dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/w2"
            >

            <ImageView android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/l2"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"/>

            <EditText android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="Username"
                android:background="#f3f3f3"

                android:paddingLeft="5dp"
                android:layout_marginTop="25dp"
                android:id="@+id/username" />


            <EditText android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginTop="25dp"
                android:id="@+id/password" />




            <TextView
                android:id="@+id/reg"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:text="Register Here"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/buttonUserLogin"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:layout_marginTop="45dp"
                android:text="LOG IN"
                android:background="#eb3757"

                />












        </LinearLayout>



    </LinearLayout>



</ScrollView>

